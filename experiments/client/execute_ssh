#!/usr/bin/env ruby

require 'net/ssh'

client_hosts = [
"vm1-h7", "vm1-h8", "vm1-h9", "vm1-h10", "vm1-h11",
"vm1-h12", "vm1-h15", "vm1-h16", "vm1-h17", "vm1-h18"
]

command = ARGV.join(" ")
username = 'rafael'
password = 'rafael'

Thread.abort_on_exception = true
threads = client_hosts.map do |c|
  Thread.new do
    begin
      ssh = Net::SSH.start(c, username, :password => password)
      res = ssh.exec!(command)
      ssh.close

      puts "\033[0;32mclient on #{c}\033[0m"
      puts res
    rescue
      puts "Unable to connect to #{@hostname} using with this username/password"
    end
  end
end

threads.each(&:join)
